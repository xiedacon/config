{
  // <!-- debug: start -->
  "debug.inlineValues": "on",
  "debug.internalConsoleOptions": "neverOpen",
  // <!-- debug: end -->

  // <!-- editor: start -->
  "editor.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.copyWithSyntaxHighlighting": false,
  "editor.emptySelectionClipboard": false,
  "editor.find.addExtraSpaceOnTop": true,
  "editor.find.cursorMoveOnType": false,
  "editor.minimap.showSlider": "always",
  // <!-- editor: end -->

  // <!-- explorer: start -->
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "type",
  // <!-- explorer: end -->

  // <!-- files: start -->
  "files.autoSave": "onFocusChange",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // <!-- files: end -->

  // <!-- git: start -->
  "git.confirmSync": false,
  "git.enableStatusBarSync": true,
  "git.fetchOnPull": true,
  "git.supportCancellation": true,
  // <!-- git: end -->

  // <!-- terminal: start -->
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.confirmOnExit": "always",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.tabs.hideCondition": "never",
  "terminal.integrated.tabs.showActiveTerminal": "always",
  // <!-- terminal: end -->

  // <!-- window: start -->
  "window.title": "${rootName}",
  "window.newWindowDimensions": "inherit",
  // <!-- window: end -->

  // <!-- workbench: start -->
  "workbench.colorTheme": "my-monokai",
  "workbench.iconTheme": "vscode-great-icons",

  "workbench.commandPalette.history": 5,
  "workbench.startupEditor": "none",
  // <!-- workbench: end -->

  // <!-- javascript: start -->
  "javascript.updateImportsOnFileMove.enabled": "never",
  "[javascript]": {},
  // <!-- javascript: end -->

  // <!-- typescript: start -->
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": false,
  "[typescript]": {},
  // <!-- typescript: end -->

  // <!-- go: start -->
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },
  // <!-- go: end -->

  // <!-- extensions: start -->

  // <!-- git-graph: start -->
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "git-graph.customBranchGlobPatterns": [
    { "name": "feature", "glob": "feature/*" },
    { "name": "hotfix", "glob": "hotfix/*" }
  ],
  "git-graph.date.format": "ISO Date & Time",
  "git-graph.dialog.resetCurrentBranchToCommit.mode": "Hard",
  // <!-- git-graph: end -->

  // <!-- gitlens: start -->
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm:ss",
  "gitlens.defaultDateStyle": "absolute",
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.graph.statusBar.enabled": false,
  "gitlens.hovers.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.statusBar.alignment": "left",
  "gitlens.statusBar.format": "${author}, ${date}  |  ${id}, ${message}",
  // <!-- gitlens: end -->

  // <!-- liveshare: start -->
  "liveshare.guestApprovalRequired": true,
  "liveshare.showReadOnlyUsersInEditor": "always"
  // <!-- liveshare: end -->

  // <!-- extensions: end -->
}
